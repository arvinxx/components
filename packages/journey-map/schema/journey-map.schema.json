{
  "$id": "journey-map-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "UserAction": {
      "description": "用户行为",
      "properties": {
        "description": {
          "description": "说明",
          "type": "string"
        },
        "emotion": {
          "description": "情绪得分",
          "type": "number"
        },
        "name": {
          "description": "行为名称",
          "type": "string"
        },
        "painSpot": {
          "description": "痛点",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "thoughts": {
          "description": "有关的想法",
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": ["emotion", "name"],
      "type": "object"
    },
    "YMLStage": {
      "properties": {
        "actions": {
          "description": "该阶段所有用户行为",
          "items": {
            "$ref": "journey-map-schema#/definitions/UserAction"
          },
          "type": "array"
        },
        "color": {
          "description": "该阶段的颜色",
          "type": "string"
        },
        "name": {
          "description": "阶段名称",
          "type": "string"
        }
      },
      "required": ["actions", "name"],
      "type": "object"
    }
  },
  "description": "解析后的 YML 数据",
  "properties": {
    "config": {
      "description": "针对旅程图的配置项"
    },
    "stages": {
      "description": "步骤",
      "items": {
        "$ref": "journey-map-schema#/definitions/YMLStage"
      },
      "type": "array"
    }
  },
  "required": ["stages"],
  "type": "object"
}
